<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Белый фон -->
    <solid android:color="@android:color/white" />
    <!-- Тонкая серая обводка -->
    <stroke
        android:width="1dp"
        android:color="#7C7C7C" />
    <!-- Скруглённые углы как в макете -->
    <corners android:radius="50dp" />
    <!-- Внутренние отступы -->
    <padding
        android:left="16dp"
        android:top="12dp"
        android:right="16dp"
        android:bottom="12dp" />
</shape>