<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vovlan.delivio">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/iconpr"
        android:label="@string/app_name"
        android:roundIcon="@drawable/iconpr"
        android:supportsRtl="true"
        android:theme="@style/Theme.Delivio">
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="false" />
        <activity android:name=".HistoryActivity" />
        <activity
            android:name=".FeedbackActivity"
            android:exported="false"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".NewOrderActivity"
            android:theme="@style/Theme.Delivio.TransparentDialog" />
        <activity android:name=".TariffsActivity" />
        <activity
            android:name=".TariffDetailsActivity"
            android:theme="@style/Theme.Delivio.TransparentDialog" />
        <activity android:name=".OrderDetailsActivity" />
        <activity android:name=".AllOrdersActivity" />
    </application>

</manifest>